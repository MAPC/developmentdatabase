#main.ui.main.container
  Edit Organization
  = form_for @organization, html:{ class: "ui form" } do |f|
    = label :name, "Name"
    = f.text_field :name
    = label :email, "E-mail"
    = f.text_field :email
    = label :location, "Location"
    = f.text_field :location
    = label :short_name, "Abbreviation"
    = f.text_field :short_name
    = label :website, "Website"
    = f.text_field :website
    = f.submit "Edit Organization", class: "ui primary button"