:ruby
  set_meta_tags title: 'Moderation'

%h3.ui.header Developments needing moderation

.row
  .ui.divided.items
    = render partial: 'developments/moderated',
      collection: DevelopmentPresenter.wrap(@user.moderated_developments),
      as: :development


%ui.horizontal.divider

%h3.ui.header Organizations with open membership requests

.row
  .ui.divided.items
    - if @user.membership_notification_count > 0
      = render partial: 'organizations/moderated',
        collection: OrganizationPresenter.wrap(@user.owned_organizations),
        as: :organization
    - else
    %p
      No organizations for which you are an administrator
      have open membership requests.
