<div id="data">
  <div class="ui horizontal divider">General</div>
</div>
<div class="ui form">
  <div class="required field huge fluid input">
    {{#ui-popup tagName="label" content="If the project is not named please use the street address, such as '2 Adams Street.' If a multi-phase project, use a single project name and add 'Phase 1,' etc."}}
      Project Name
    {{/ui-popup}}
    {{input value=model.name class="huge" placeholder="Descriptive name for development project"}}
  </div>

  <div class="required field fluid huge input">
    {{#ui-popup tagName="label" content="Short sentence describing project. e.g. 'Luxury hotel with ground-floor retail.'"}}Tagline{{/ui-popup}}
    {{input value=model.tagline class="huge" placeholder="Project tagline"}}
  </div>

  <div class="required field">
    {{#ui-popup tagName="label" content="Brief summary of the project."}}Description{{/ui-popup}}
    {{textarea value=model.description cols="80" rows="10" placeholder="e.g. 'Transit-oriented affordable housing complex with ground-floor retail and restaurant spaces.'"}}
  </div>

  <div class="ui segment">
    <div class="ui top attached label">Project Tags - Click to Select</div>
    <div class="ui tag labels">
      {{toggle-label field=model.redevelopment label="Redevelopment"}}
      {{toggle-label field=model.asofright label="As-of-Right"}}
      {{toggle-label field=model.age_restricted label="Age Restricted"}}
      {{toggle-label field=model.clusteros label="Cluster / Open Space"}}
      {{toggle-label field=model.phased label="Phased"}}
      {{toggle-label field=model.cancelled label="Cancelled"}}
      {{toggle-label field=model.private label="Private"}}
    </div>
  </div>

  <div class="ui segment">
    <div class="ui top attached label">Construction Status</div>
    <div class="grouped fields">
      <div class="field">
        {{!-- <div class="ui radio checkbox"> --}}
          {{ui-radio name='status' value='projected' current=model.status}}
          <label><b>Projected:</b> Known opportunity or planning priority but no specific proposal or developer</label>
        {{!-- </div> --}}
      </div>
      <div class="field">
        {{!-- <div class="ui radio checkbox"> --}}
          {{ui-radio name='status' value='planning' current=model.status}}
          <label><b>Planning:</b> Specific proposal &amp; proponent, building permit not yet issued</label>
     {{!--    </div> --}}
      </div>
      <div class="field">
        {{!-- <div class="ui radio checkbox"> --}}
          {{ui-radio name='status' value='in_construction' current=model.status}}
          <label><b>In Construction:</b> Commencement of site work to receipt of final occupancy permit</label>
       {{!--  </div> --}}
      </div>
      <div class="field">
        {{!-- <div class="ui radio checkbox"> --}}
          {{ui-radio name='status' value='completed' current=model.status}}
          <label><b>Completed:</b> Development is occupied or available for occupancy</label>
  {{!--       </div> --}}
      </div>
    </div>
  </div>
  <div class="required field fluid huge input">
    {{#ui-popup tagName="label" content="Estimated year of completion (approximate estimate OK)"}}Year Completed (YYYY){{/ui-popup}}
    {{input value=model.year_compl class="huge" placeholder="Project tagline"}}
  </div>
  <div class="required field fluid huge input">
    {{#ui-popup tagName="label" content="Number of on-site parking spaces"}}On-site parking spaces{{/ui-popup}}
    {{input value=model.onsitepark class="huge"}}
  </div>
</div>
